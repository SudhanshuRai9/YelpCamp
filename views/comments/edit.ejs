<%- include('../partials/header') %>

<div class="container">
        <h1 style="text-align: center; margin-top: 2rem;">Edit</h1>
        <div style="width: 30%; margin: 20px auto">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="mb-2">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
                </div>
                <div class="mb-2">
                    <button class="btn btn-lg btn-primary col-12">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
</div>

<%- include('../partials/footer') %>