<%- include('../partials/header') %>

<div class="container">
        <h1 style="text-align: center; margin-top: 2rem;">Create a new Campground</h1>
        <div style="width: 30%; margin: 20px auto">
            <form action="/campgrounds" method="POST">
                <div class="mb-2">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="mb-2">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.00" step="0.01">
                </div>
                <div class="mb-2">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="mb-2">
                    <input class="form-control" type="text" name="desc" placeholder="description">
                </div>
                <div class="mb-2">
                    <button class="btn btn-lg btn-primary col-12">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
</div>

<%- include('../partials/footer') %>