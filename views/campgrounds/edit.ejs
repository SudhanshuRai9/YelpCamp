<%- include('../partials/header') %>

<div class="container">
        <h1 style="text-align: center; margin-top: 2rem;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 20px auto">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="mb-2">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="mb-2">
                    <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" placeholder="price" min="0.00" step="0.01">
                </div>
                <div class="mb-2">
                    <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="mb-2">
                    <input class="form-control" type="text" name="campground[desc]" value="<%= campground.desc %>">
                </div>
                <div class="mb-2">
                    <button class="btn btn-lg btn-primary col-12">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
</div>

<%- include('../partials/footer') %>